<template name="login">
  <view class="cu-modal {{showLogin?'show':''}}">
    <view class="cu-dialog" style="width:400rpx;position:relative">
      <view class="me shadow-blur">
        <view class="userinfo">
          <view class="userinfo-avatar">
            <open-data type="userAvatarUrl"></open-data>
          </view>
          <open-data type="userNickName"></open-data>
        </view>
        <view class="animation-wave">
          <view class="wave"></view>
        </view>
      </view>
      <button bindgetuserinfo="bindgetuserinfo" class="choose_view" openType="getUserInfo">
        <view class="text-df padding-lg"> 点此授权微信登录</view>
      </button>
    </view>
  </view>
</template>