@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
/* 商品列表 */
.goods_list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx 1%;
  width: 48%;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}

.goods_list>image {
  height: 308rpx;
  width: 100%;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}

.goods_list .goode_info {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  text-align: left;
  width: 100%;
}

.goods_list .goode_info>view {
  margin: 2rpx 0;
}

.goods_title {
  height: 40px;
}

.search_close {
  font-size: 30rpx !important;
}