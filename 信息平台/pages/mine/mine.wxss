page {
  background-color: #f1f1f1;
}

.me {
  height: 400rpx;
  text-align: center;
  font-size: 18px;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position:relative;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx 0;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

/* 功能 */

.active_container {
  width: 90%;
  margin: 30rpx auto;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 110rpx;
  border-radius: 15rpx;
  box-shadow: 5rpx 8rpx 8rpx #f0f0f0;
  color: #0c0c0c;
}

.active_container:first-of-type {
  margin-top: 50rpx;
}

.active_container image {
  width: 50rpx;
  height: 50rpx;
  margin: auto 40rpx;
}

.active_text {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}

.active_text_english {
  margin-top: 4rpx;
  font-size: 23rpx;
}

.active_triangle {
  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-left: 30rpx solid #e9e9e9;
  border-bottom: 15rpx solid transparent;
  position: absolute;
  right: 10%;
}


.login_btn {
  position: absolute;
  right: 5%;
  bottom: 3%;
  color: #936f61;
  font-size: 26rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0;
  background-color: #fff;
}

.login_btn::after {
  border: 1px solid #888;
}

.tips_icon {
  font-size: 30rpx;
  padding: 10rpx;
  margin-right: 10px;
}

.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}